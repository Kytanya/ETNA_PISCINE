body
{
	width: 100%;
    height: 95vh;
    overflow-x: hidden;
    background-color: rgb(254,253, 240);
}

h1
{
	text-align: center;
    font-family: 'Georgia';
    color: rgb(96, 96, 96);
    font-size: 200%;
}

input
{
	width: 20%;
	margin-right: 1%;
}

footer
{
	position: fixed; bottom:  0;
    margin-top: 450px;
    height: 50px;
    width: 98%;
    text-align: center;
    background: radial-gradient(#FFF0F0, rgb(202, 28, 97));
}

img
{
	height: 40px;
	width: 50px;
	margin-left: 20px;
	margin-top: 5px;
}

.inline
{
	width: 100%;
	display: inline-block;
	margin-bottom: 2%;
	text-align: center;
}

.col-title
{
	width: 20%;
    font-weight: bold;
    display: inline-block;
    text-align: center;
    margin-right: 1%;
    margin-left: 4px;
    margin-top: 20px;
    font-family: 'Georgia';
    color: rgb(96, 96, 96);
}

.addButton
{
	width: 3em;
	height: 3em;
	border-radius: 25px;
	background-color: #00cc00;
	float: right;
	margin-right: 5%;
}

.button
{
	width: 20%;
}

.errorMessage
{
	color: red;
	width: 100%;
	text-align: center;
	margin-bottom: 2%;
}

.successMessage
{
	color: green;
	width: 100%;
	text-align: center;
	margin-bottom: 2%;
}

#nav-button
{
	margin-top: 2%;
	width: 94%;
	padding-left: 30%;
	padding-right: 30%;
	margin-bottom: 70px;
}